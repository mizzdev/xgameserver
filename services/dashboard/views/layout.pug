doctype html
html
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title= title
    link(rel='stylesheet', href=rootPath+'/lib/bootstrap/css/bootstrap.min.css')
    link(rel='stylesheet', href=rootPath+'/lib/font-awesome/css/font-awesome.min.css')
    link(rel='stylesheet', href=rootPath+'/css/style.css')
  body
    .navbar.navbar-default.navbar-fixed-top
      .container
        .navbar-header
          if user
            button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar-header')
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
          a.navbar-brand(href=rootPath)
            i.fa.fa-dashboard
            span  #{title}
        #navbar-header.collapse.navbar-collapse
          if user
            ul.nav.navbar-nav.navbar-right
              li
                a(href=rootPath+'/profile')
                  i.fa.fa-user
                  span  #{user.username}
              li
                a(href=rootPath+'/logout')
                  i.fa.fa-sign-out
                  span  Logout
    .container
      block content
    script(src=rootPath+'/lib/jquery/jquery.min.js')
    script(src=rootPath+'/lib/bootstrap/js/bootstrap.min.js')