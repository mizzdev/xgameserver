									"var data = JSON.parse(responseBody);",
									"var payload = btoa(JSON.stringify({ id: data.id, time: Date.now() }));",
									"",
									"postman.setEnvironmentVariable(\"xgs_id\", data.id);",
									"postman.setEnvironmentVariable(\"xgs_auth\", payload + '.' + payload);"
